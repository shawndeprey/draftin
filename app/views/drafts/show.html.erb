<% if @draft.stage == CREATE_STAGE %>
  <div class="row">
    <div class="col-lg-12">
      <h2><%= @draft.name %></h2>
    </div>
  </div>

  <div class="row">

    <div class="col-lg-4">
      <div id="draft_users">
        <ul class="list-group">
          <li class="list-group-item" style="background-color:#49515a;">
            <span class="badge"><%= @draft.user_count %></span>
            Users
          </li>
          <% @draft.users.each do |user| %>
            <li class="list-group-item"><%= user.username %></li>
          <% end %>
        </ul>
      </div>
    </div>

    <div class="col-lg-4">
      <div id="draft_sets">
        <ul class="list-group">
          <li class="list-group-item" style="background-color:#49515a;">
            <span class="badge"><%= @draft.card_sets.length %></span>
            Sets
          </li>
          <% @draft.card_sets.each do |set| %>
            <li class="list-group-item"><%= set.name %></li>
          <% end %>
        </ul>
      </div>
    </div>

    <div class="col-lg-4">
      <div class="bs-example">
        <ul class="list-group">
          <li class="list-group-item" style="background-color:#49515a;">
            Options
          </li>
          <li class="list-group-item">
            <button type="button" class="btn btn-success">Start Draft</button>
            <a data-method="delete" href="<%= draft_path(@draft) %>" rel="nofollow">
              <button type="button" class="btn btn-danger">Destroy Draft</button>
            </a>
          </li>
        </ul>
      </div>
    </div>

  </div>
<% elsif @draft.stage == DRAFT_STAGE %>
  <p>Drafting Stage!</p>
<% else %>
  <p>Draft is OVER! Display cards!</p>
<% end %>