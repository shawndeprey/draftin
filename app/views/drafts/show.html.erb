<%= render "drafts/draft_menu" %>
<% if @draft.stage == CREATE_STAGE %>
  <%= render "drafts/lobby" %>
<% elsif @draft.stage == DRAFT_STAGE %>
  <%= render "drafts/draft_in_progress" %>
<% elsif @draft.stage == END_STAGE %>
  <%= render "drafts/draft_finished" %>
<% end %>
<script type="text/javascript">
$(document).ready(function(){
  draftin.draft.init(<%= @draft.id %>, <%= @draft.stage %>, <%= @session_user.id %>);
});
</script>