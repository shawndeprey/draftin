<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <div class="well">

      <%= form_for(@session_user) do |f| %>
        <fieldset>
          <legend>Account Info</legend>
          <p style="font-size:20px;padding-bottom:15px;">
            <span class="label label-default">Email: <%= @session_user.email %></span>
            <span class="label label-default">Username: <%= @session_user.username %></span>
          </p>

          <div class="form-group row">
            <div class="col-sm-6">
              <%= f.password_field :password, :placeholder => "Password", :class => "form-control" %>
            </div>
            <div class="col-sm-6">
              <%= f.label :receive_emails %>
              <%= f.select :receive_emails, [["No", false], ["Yes", true]] %>
            </div>
          </div>

          <div class="form-group row" style="margin-top:15px;">
            <div class="col-sm-8 col-sm-offset-2">
              <button type="submit" class="btn btn-success btn-block">Update Information</button>
            </div>
          </div>
        </fieldset>
      <% end %>

    </div>
  </div>
</div>