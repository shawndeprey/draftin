<div class="navbar navbar-default navbar-fixed-top">
  <div class="beta_ribbon">
    <%= image_tag "etc/alpha-ribbon.png" %>
  </div>
  <div class="container">
    <div class="navbar-header">
      <a href="../" class="navbar-brand"><%= image_tag "logo.png", :class => "header_logo" %></a>
      <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>

    <div class="navbar-collapse collapse" id="navbar-main">
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "News", articles_url, :style => "border: none;" %></li>
        <li><%= link_to "About", about_url, :style => "border: none;" %></li>
        <li><%= link_to "Donate", donate_url, :style => "border: none;" %></li>
        <% if @session_user %>
          <% if @session_user.admin? %>
            <li><%= link_to "Admin", "/admin", :style => "border: none;" %></li>
          <% end %>
          <li><%= link_to @session_user.username, user_path(@session_user), :style => "border: none;" %></li>
          <li><%= link_to "Logout", "/session", method: :delete, :style => "border: none;" %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>